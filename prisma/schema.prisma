generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  image         String?
  provider      String?  // OAuth provider name (google, github, email)
  providerId    String?  // For OAuth unique id
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}